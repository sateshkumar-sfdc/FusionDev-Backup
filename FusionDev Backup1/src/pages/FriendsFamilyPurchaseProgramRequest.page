<apex:page controller="WebCaseController" showHeader="false" sidebar="false" standardStylesheets="false">
    <!--<apex:sectionHeader title="{!$Label.WEB_FORM}" subtitle="{!$Label.WARRANTY_REQUEST_FORM}"/>-->
   
  <apex:form >
    <apex:pageMessages /> <!-- this is where the error messages will appear -->
    <!--<apex:pageBlock title="{!$Label.Case_Information}">-->
        <apex:pageBlock >
            <apex:pageBlockSection showHeader="false" columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.FIRST_NAME}" />
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                            <div class="requiredBlock"></div>
                            <apex:inputText value="{!firstName}"/>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.LAST_NAME}" />
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                            <div class="requiredBlock"></div>
                            <apex:inputText value="{!lastName}"/>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                        <apex:outputLabel value="{!$Label.EMAIL}" />
                        <apex:outputPanel layout="block" styleClass="requiredInput">
                                <div class="requiredBlock"></div>
                                <apex:inputText value="{!email}"/>
                        </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                        <apex:outputLabel value="{!$Label.PHONE_NUMBER}" />
                        <apex:outputPanel layout="block" styleClass="requiredInput">
                                <div class="requiredBlock"></div>
                                <apex:inputText value="{!phoneNumber}"/>
                        </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.STREET_ADDRESS}" />
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                            <div class="requiredBlock"></div>
                            <apex:inputText value="{!streetLine1}"/>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>
            
                <apex:inputText style="width: 50% !important;" value="{!streetLine2}" label="{!$Label.ADDRESS_LINE_2}"/>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.CITY}" />
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                            <div class="requiredBlock"></div>
                            <apex:inputText value="{!city}"/>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.STATE}" />
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                            <div class="requiredBlock"></div>
                            <apex:selectList disabled="false" value="{!state}" size="1" multiselect="false" >
                                <apex:selectOptions value="{!listStateCodes}" />
                            </apex:selectList>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.ZIP_CODE}" />
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                            <div class="requiredBlock"></div>
                            <apex:inputText value="{!zipcode}"/>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.EMPLOYEE_FIRST_NAME}" />
                        <apex:inputField value="{!newcase.Employee_First_Name__c}" required="true"/>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.EMPLOYEE_LAST_NAME}" />
                        <apex:inputField value="{!newcase.Employee_Last_Name__c}" required="true"/>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.EMAIL_ADDRESS_OF_YETI_EMPLOYEE}" />
                        <apex:inputField value="{!newcase.Employee_Email_Address__c}" required="true"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.CONFIRM_EMAIL}" />
                    <apex:outputPanel layout="block" styleClass="requiredInput">
                            <div class="requiredBlock"></div>
                            <apex:inputText value="{!emailConfirmation}"/>
                    </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                        <apex:outputLabel value="{!$Label.RELATION_TO_YETI_EMPLOYEE}" />
                        <apex:outputPanel layout="block" styleClass="requiredInput">
                                <div class="requiredBlock"></div>
                                <apex:inputText value="{!empRelationship}"/>
                        </apex:outputPanel>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                        <apex:outputLabel value="{!$Label.I_AGREE_WITH_THE_YETI_FRIENDS_AND_FAMILY_PROGRAM_TERMS_AND_CONDITIONS}" style="font-weight: bold;"/> <apex:inputField value="{!newcase.T_C_Agreement__c}" label=" " required="true"/>
                </apex:pageBlockSectionItem>
                
                <apex:outputLabel value="{!$Label.Terms_and_Conditions}" style="font-weight: bold;"/>
                
    
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!saveFamilyProgramRequest}" value="{!$Label.Submit}"/>
            </apex:pageBlockButtons> 
        </apex:pageBlock>
    </apex:form>  
