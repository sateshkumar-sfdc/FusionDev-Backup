                                           	</apex:commandLink>                                         
                                        </apex:facet>
                                    </apex:column>
                                    <apex:column value="{!call.et4ae5__Trigger_send_when__c}">
                                        <apex:facet name="header">
                                            <apex:commandLink action="{!clickedOnColumn}" value="{!$Label.action} {!IF(columnDisplay=='Trigger_send_when__c',IF(sortDisplay='ASC','▲','▼'),'')}">
                                            	<apex:param name="CC" value="Trigger_send_when__c"/>
                                           	</apex:commandLink>                                          
                                        </apex:facet>
                                    </apex:column>
                                    <apex:column value="{!call.et4ae5__EmailName__c}">
                                        <apex:facet name="header">
                                            <apex:commandLink action="{!clickedOnColumn}" value="{!$Label.emailName} {!IF(columnDisplay=='EmailName__c',IF(sortDisplay='ASC','▲','▼'),'')}">
                                            	<apex:param name="CC" value="EmailName__c"/>
                                           	</apex:commandLink>                                            
                                        </apex:facet>
                                    </apex:column>
                                    <apex:column value="{!call.et4ae5__Contact_Lead_FIeld__c}">
                                        <apex:facet name="header">
                                            <apex:commandLink action="{!clickedOnColumn}" value="{!$Label.subsField} {!IF(columnDisplay=='Contact_Lead_FIeld__c',IF(sortDisplay='ASC','▲','▼'),'')}">
                                            	<apex:param name="CC" value="Contact_Lead_FIeld__c"/>
                                           	</apex:commandLink>                                            
                                        </apex:facet>
                                    </apex:column>
                                     <apex:column value="{!call.et4ae5__NumberSent__c}">
