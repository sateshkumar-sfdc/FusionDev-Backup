                    <apex:pageBlockSection >
                        <apex:pageBlockSectionItem >
                            <apex:outputLabel value="{!$Label.srchCrit}" style="width:50px" />
                            <apex:inputText value="{!searchCriteria}" style="width:250px" />
                        </apex:pageBlockSectionItem>
                    </apex:pageBlockSection>
                    <apex:pageBlockButtons location="both">
                        <apex:commandbutton value="{!$Label.apply}" action="{!applySearch}" rerender="theForm" />
                        <apex:commandbutton value="{!$Label.clear}" action="{!cancelSearch}" rerender="theForm" />
                    </apex:pageBlockButtons>
                </apex:pageBlock>
            </apex:outputPanel>
            <apex:outputPanel id="out">
                <apex:actionstatus id="status" startText="{!$Label.loadingCal}">
                    <apex:facet name="stop">
                        <apex:outputPanel >
                            <apex:pageBlockTable value="{!callList}" var="call">
                                <b>
                                    <apex:column style="text-align:center;width:1px;" >
                                        <apex:facet name="header" >
                                            <apex:commandLink action="{!clickedOnColumn}" value="{!$Label.active} {!IF(columnDisplay=='Active__c',IF(sortDisplay='ASC','▲','▼'),'')}">
