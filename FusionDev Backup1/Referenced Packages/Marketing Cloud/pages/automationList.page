                                           	</apex:commandLink> 
                                        </apex:facet>
                                        <apex:image value="{!IF(call.et4ae5__Active__c,'/img/checkbox_checked.gif','/img/checkbox_unchecked.gif')}" />
                                    </apex:column>                                    
                                    <apex:column >
                                    <a href="/{!call.id}">{!call.Name}</a>
                                        <apex:facet name="header">
                                            <apex:commandLink action="{!clickedOnColumn}" value="{!$Label.atmName} {!IF(columnDisplay=='Name',IF(sortDisplay='ASC','▲','▼'),'')}">
                                            	<apex:param name="CC" value="Name"/>
                                           	</apex:commandLink>                                         
                                        </apex:facet>
                                    </apex:column>
                                    <apex:column value="{!call.et4ae5__Object__c}">
                                        <apex:facet name="header">
                                            <apex:commandLink action="{!clickedOnColumn}" value="{!$Label.object} {!IF(columnDisplay=='Object__c',IF(sortDisplay='ASC','▲','▼'),'')}">
