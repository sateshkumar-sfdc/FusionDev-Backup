	   	subject = decodeURIComponent(subject);
	   	subject = subject.replace(/&#39;/g, "\'");
	   	subject = subject.replace(/&(quot);/g, "\"");
	   	subject = subject.replace(/&(gt);/g, "\>");
	   	subject = subject.replace(/&(lt);/g, "\<");
	   	subject = subject.replace(/&(amp);/g, "\&");
