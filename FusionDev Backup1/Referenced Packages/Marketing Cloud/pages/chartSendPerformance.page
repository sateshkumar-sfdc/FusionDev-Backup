        sfdcPage.setHelp('related-individual-email-result-reports-title', '{!JSENCODE($Label.msg0092)}');
        
        function anchorListener(event) {
            if (typeof sforce !== 'undefined' && sforce.one && (event.srcElement.dataset.href || event.target.dataset.href)) {
                event.preventDefault();
                event.stopImmediatePropagation();
                event.stopPropagation();
                sforce.one.navigateToURL(event.srcElement.dataset.href);
            } else {
