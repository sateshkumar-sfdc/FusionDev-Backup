body {
    margin: 0;
    padding: 0;
    
    font-size: 11px;
}

#popupcontent {
    box-sizing: border-box;
    position: fixed;
    display: none;
    top: 3%;
    left: 3%;
    width: 94%;
    height: 94%;
    border: 3px solid #e0e3e5;
    padding: 5px;
    z-index: 100;
    
    background-color: #f0f0f0;
    
    overflow: auto;
}

/* Needed to move help text bubbles down in line with the titles */
img.helpOrb {
    vertical-align: bottom;
}

/* Used to do the grid layout */
.row {
    display: block;
    box-sizing: border-box;
    width: 100%;
    margin: 0;
    padding: 0;
}

.row.center {
    text-align: center;
}

/* Make sure there is no whitespace between cells */
.cell {
    display: inline-block;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    
    vertical-align: top;
}

.cell.whole {
    width: 100%;
}

.cell.one-third {
    width: 33.333333333%;
}

.cell.two-third {
    width: 66.666666666%;
}

.cell.half {
    width: 49.5%;
}

/* Link color */
a:link {color:blue;}


/* Widget styles */
.widget {
    margin: 5px;
    border: 1px solid #e0e3e5;
    padding: 7px;
    min-height: 166px;
    
    background-color: #f0f0f0;
    border-radius: 4px;
}

.widget .header {
    font-size: 14px;
    font-weight: bold;
}

/* Form styles */
.form {
	float:right;
}

.form > table > tbody > tr > .label {
    width: 50%;
    padding-right: 1em;
    
    text-align: right;
    font-weight: bold;
    width:34%;
}
.form > table > tbody > tr > .value {
    text-align: left;
    
}

.data > table {
}
.data > table > tbody > tr > .label {
    text-align: right;
    font-weight: bold;
    text-overflow: ellipsis;
    white-space: nowrap;
    width:34%;
}
.data > table > tbody > tr > .value {
    text-align: right;
    width:33%;
}
.data > table > tbody > tr > .box{
    text-align: right;
    width: 33%;
}
.legend {
    display: inline-block;
    float: right;
    height: 1em;
    width: 1em;
    margin: 0;
    margin-right: 2px;
    border: 1px solid #e0e3e5; 
    padding: 0;
    
    vertical-align: text-bottom;
}
.legend.blue {
    background-color: hsl(200, 50%, 60%);
}
.legend.green {
    background-color: hsl(76, 73%, 50%);
}
.legend.orange {
    background-color: hsl(33, 85%, 57%);
}
.photo{
	text-align:left;
}
.link{
	padding-right:10px;
}

/* Mobile styles */
@media only screen and (max-width: 500px) {
    body: {
        font-size: 16px;
    }
