                            <apex:pageBlockTable id="theTable" value="{!callList}" var="call">
                                <apex:column >
                                    <apex:facet name="header">
                                        {!$Label.user}
                                    </apex:facet>
                                    <apex:inputcheckbox value="{!call.etUser}" onchange="doUserChange(this, '{!call.user.Id}')" />
