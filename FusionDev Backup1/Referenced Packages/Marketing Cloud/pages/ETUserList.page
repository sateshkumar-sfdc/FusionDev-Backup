    <script type="text/javascript">
        function doUserChange(cb, itemId) 
        {
            if(cb.checked==true)
            {
                aSelectUser(itemId);
            }
            else
            {
                aDeselectUser(itemId);
            }
        }
        function doAdminChange(cb, itemId) 
        {
            if(cb.checked==true)
            {
                aSelectAdmin(itemId);
            }
            else
            {
                aDeselectAdmin(itemId);
            }
        }
