		</apex:pageBlock>
		<script type="text/javascript">
			function closePage() {
				if({!isSaved}) {
					setTimeout(function(){ window.opener.closeWindow(); }, 1500);					
				}
			}
		</script>
	</apex:form>
</apex:page>